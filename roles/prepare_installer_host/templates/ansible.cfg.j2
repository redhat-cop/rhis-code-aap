[defaults]
collections_path = ./imported/collections:./collections
roles_path = ./imported/roles:./roles

{% if connected_environment %}
[galaxy]
server_list = automation_hub, automation_hub_validated, galaxy

[galaxy_server.automation_hub]
url=https://console.redhat.com/api/automation-hub/content/published/
auth_url=https://sso.redhat.com/auth/realms/redhat-external/protocol/openid-connect/token
token={{ aap_setup_automation_hub_token }}

[galaxy_server.automation_hub_validated]
url=https://console.redhat.com/api/automation-hub/content/validated/
auth_url=https://sso.redhat.com/auth/realms/redhat-external/protocol/openid-connect/token
token={{ aap_setup_automation_hub_token }}

[galaxy_server.galaxy]
url={{ prepare_installer_host_galaxy_server_url }}
{% endif %}
